{
    "extends": ["tslint-config-airbnb", "typestrict", "tslint-config-prettier"],
    "rules": {
        "trailing-comma": [
            true,
            {
                "esSpecCompliant": true,
                "multiline": {
                    "objects": "always",
                    "arrays": "always"
                },
                "singleline": "never"
            }
        ],
        "semicolon": [true, "never"],
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case",
            "ban-keywords",
            "allow-leading-underscore"
        ],
        "import-name": false,
        "ter-arrow-parens": false,
        "no-unused-variable": false,
        "prefer-array-literal": [true, { "allow-type-parameters": true }]
    }
}
